<p>create a new song</p>

<form action="/songs" method="post">
  <label>Song Name:</label>
  <input type="text" name="song[name]">
  <br>

  <label>Genre Name:</label>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_id]" value="<%=genre.id%>"><%=genre.name%></input>
  <% end %>
  <br>

  <label>Choose existing Artist:</label>
  <label>Artist Name:</label>
  <% @artists.each do |artist| %>
    <input type="text" name="song[artist_id]" value="<%=artist.id"><%=artist.name%></input>
  <% end %>



</form>
